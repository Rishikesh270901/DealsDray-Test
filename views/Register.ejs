<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 20px;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input[type="text"],
        .form-group input[type="password"],
        .form-group input[type="email"],
        .form-group select {
            width: calc(100% - 10px);
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .form-group select {
            padding: 9px;
        }

        .form-group .file-input {
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #fafafa;
        }

        .form-group .file-input input[type="file"] {
            display: none;
        }

        .form-group .file-input label {
            display: inline-block;
            padding: 8px 12px;
            border: 1px solid #007bff;
            color: #007bff;
            cursor: pointer;
            border-radius: 4px;
        }

        .form-group .file-input label:hover {
            background-color: #007bff;
            color: #fff;
        }

        .form-group .file-name {
            margin-top: 5px;
            font-size: 14px;
        }

        .form-group .courses-container {
            display: flex;
            flex-wrap: wrap;
        }

        .form-group .course-checkbox {
            margin-right: 10px;
        }

        .form-group .gender-container {
            display: flex;
            margin-top: 5px;
        }

        .form-group .gender-container label {
            margin-right: 15px;
        }

        .form-group .submit-btn {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .form-group .submit-btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>User Registration</h2>
        <form action="/api/v1/employees/register" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" id="fullName" name="fullName" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="role">Role</label>
                <select id="role" name="role" required>
                    <option value="#">Select</option>
                    <option value="Employee">Employee</option>
                    <option value="admin">admin</option>
                </select>
            </div>

            <div class="form-group">
                <label for="mobileNumber">Mobile Number</label>
                <input type="text" id="mobileNumber" name="mobileNumber" required>
            </div>

            <div class="form-group">
                <label for="designation">Designation</label>
                <select id="designation" name="designation" required>
                    <option value="HR Manager">HR</option>
                    <option value="HR Manager">Manager</option>
                    <option value="Sales">Sales</option>
                </select>
            </div>

            <div class="form-group">
                <label>Gender</label>
                <div class="gender-container">
                    <label><input type="radio" name="gender" value="Male" required> Male</label>
                    <label><input type="radio" name="gender" value="Female" required> Female</label>
                </div>
            </div>

            <div class="form-group">
                <label>Courses</label>
                <div class="courses-container">
                    <label class="course-checkbox"><input type="checkbox" name="courses" value="MCA"> MCA</label>
                    <label class="course-checkbox"><input type="checkbox" name="courses" value="BCA"> BCA</label>
                    <label class="course-checkbox"><input type="checkbox" name="courses" value="BSC"> BSC</label>
                    <!-- Add more courses as needed -->
                </div>
            </div>

            <div class="form-group">
                <label for="image">Profile Image</label>
                <div class="file-input">
                    <input type="file" id="image" name="image" accept="image/*" required>
                    <label for="image">Choose File</label>
                    <span class="file-name"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="submit-btn">Register</button>
            </div>
        </form>
    </div>

    <script>
        document.querySelector('#image').addEventListener('change', function() {
            const fileInput = document.querySelector('#image');
            const fileName = fileInput.files[0].name;
            const fileDisplay = document.querySelector('.file-name');
            fileDisplay.textContent = fileName;
        });
    </script>
</body>
</html>
